      <DocumentationFile>bin\net6.0-ios\Laerdal.Dfu.xml</DocumentationFile>
      <MtouchLink>SdkOnly</MtouchLink>
    </PropertyGroup>
    <ItemGroup Condition="'$(TargetFramework)' == 'monoandroid12.0'">
      <PackageReference Include="GoogleGson" Version="2.8.6">
      </PackageReference>
    </ItemGroup>

    <Import Project="Laerdal.Dfu.Shared.targets" />
